<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_setting"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/description_btn_back"
            app:srcCompat="@drawable/ic_btn_back"
            app:tint="@color/color_title" />

        <TextView
            android:id="@+id/Setting"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginVertical="4dp"
            android:layout_weight="90"
            android:gravity="center|start"
            android:text="@string/Setting"
            android:textColor="@color/color_title"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/setting_side_margins"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="6dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            app:srcCompat="@drawable/ic_switch" />

        <TextView
            android:id="@+id/Dark_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginVertical="@dimen/setting_vertical_margin"
            android:text="@string/Dark_theme"
            android:textColor="@color/color_item"
            android:textSize="16sp" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/setting_side_margins"
        android:layout_marginEnd="12dp">

        <TextView
            android:id="@+id/Share_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginVertical="@dimen/setting_vertical_margin"
            android:text="@string/Share_app"
            android:textColor="@color/color_item"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            app:tint="@color/item_setting"
            app:srcCompat="@drawable/ic_share" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/setting_side_margins"
        android:layout_marginEnd="12dp">

        <TextView
            android:id="@+id/support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginVertical="@dimen/setting_vertical_margin"
            android:text="@string/support"
            android:textColor="@color/color_item"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView2"
            app:tint="@color/item_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            app:srcCompat="@drawable/ic_support" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/setting_side_margins"
        android:layout_marginEnd="12dp">

        <TextView
            android:id="@+id/user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginVertical="@dimen/setting_vertical_margin"
            android:text="@string/user_agreement"
            android:textColor="@color/color_item"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView3"
            app:tint="@color/item_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            app:srcCompat="@drawable/ic_forward" />

    </FrameLayout>


</LinearLayout>